<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="colorAccent">#40E0D0</color>
    <color name="colorPrimary">#4169E1</color>
    <color name="colorPrimaryDark">#1E3A8A</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <string name="app_name">event scanner</string>
    <string name="custom_url_scheme">com.event.app</string>
    <string name="package_name">com.event.app</string>
    <string name="title_activity_main">event scanner</string>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>
    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>
</resources>